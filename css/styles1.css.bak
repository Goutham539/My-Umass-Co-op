body{
  font-family: 'Crimson Pro', serif;
  margin: 0;
  background-color: black;
  color: white;
  text-align: center;
}


.fa {
  padding: 20px;
  font-size: 30px;
  width: 50px;
  text-align: center;
  text-decoration: none;
  margin: 5px 2px;
}

.fa:hover {
    opacity: 0.7;
}

.fa-google {
  background: #dd4b39;
  color: white;
}

.content{
  position: absolute;
  width: 340px;
  height: 620px;
  background:#034f84;
  padding: 10px;
}

.datacard{
	position: absolute;
  width: 360px;
  height: 310px;
  background:#ffffff;
}

/* Button syntax*/
.btn {
  border: 2px solid black;
  background-color: white;
  color: black;
  padding: 14px 28px;
  font-size: 16px;
  cursor: pointer;
}

/* Green */
.signup {
  border-color: #04AA6D;
  color: green;
  border-radius: 10px;
}

.signup:hover {
  background-color: #04AA6D;
  color: white;
  border-radius: 10px;
}

